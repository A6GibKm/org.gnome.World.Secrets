{
    "app-id": "org.gnome.World.Secrets",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "secrets",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup" : [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules" : [
        "python3-pykeepass.json",
        "python3-pyotp.json",
        {
            "name" : "libpwquality",
            "buildsystem" : "autotools",
            "config-opts": [
                "--with-python-binary=python3"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://github.com/libpwquality/libpwquality/releases/download/libpwquality-1.4.4/libpwquality-1.4.4.tar.bz2",
                    "sha256": "d43baf23dc6887fe8f8e9b75cabaabc5f4bbbaa0f9eff44278d276141752a545"
                }
            ]
        },
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "cleanup": ["*"],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "commit": "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "cleanup": ["*"],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "commit": "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name": "pango",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pango/1.50/pango-1.50.3.tar.xz",
                    "sha256": "4add05edf51c1fb375a1ccde7498914120e23cb280dd7395b1aeb441f1838a4c"
                }
            ]
        },
        {
            "name": "gtk",
            "buildsystem": "meson",
            "config-opts" : [
                    "-Dbuild-examples=false",
                    "-Dbuild-tests=false"
            ],
            "sources": [
                {
                  "type": "archive",
                  "url": "https://download.gnome.org/sources/gtk/4.6/gtk-4.6.1.tar.xz",
                  "sha256" : "d85508d21cbbcd63d568a7862af5ecd63b978d7d5799cbe404c91d2389d0ec5f"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                  "type": "archive",
                  "url": "https://download.gnome.org/sources/libadwaita/1.0/libadwaita-1.0.1.tar.xz",
                  "sha256" : "bb49cf5a09d2e8bc144946c2c3272aecd611667fd027f3808b95d7101ed473d6"
                }
            ]
        },
        {
            "name" : "secrets",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/secrets/-/archive/6.2/secrets-6.2.tar.gz",
                    "sha256": "411d9d3baf95fc60be4f15889675fa42ebba8d6ae1148ccc415451c02bff9678"
                }
            ]
        }
    ]
}
